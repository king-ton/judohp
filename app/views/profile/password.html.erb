<% provide(:title, t('profile.change_password'))%>

<%= errors_for(@user) %>

<%= simple_form_for :user do |f| %>

<div class="row" >
	<div class="col-md-3">
		<%= f.input :new_password, :label => t(:field_new_password) %>
		<%= f.full_error :password %>
	</div>
</div>
<div class="row" >
	<div class="col-md-3">
		<%= f.input :new_password_confirmation, :label => t(:field_confirmation) %>
		<%= f.full_error :password_confirmation %>
	</div>
</div>

<%= f.submit t(:button_change), :class => 'btn btn-success' %>

<% end %>

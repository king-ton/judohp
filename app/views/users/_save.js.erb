$("ul.errors").html("")
<% if @user.errors.any? %>
	<% @user.errors.full_messages.each do |message| %>
		$("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
	<% end %>
<% else %>
<% print '########' %>
	<% if action?('create')%>
		$('#person_user_id').append($("<option />").html("<%= @user.name %>").attr("value", <%= @user.id %>))
		selectChanged('person', 'user')
	<% else %>
	$('#person_user_id option[value=<%= @user.id %>]').html("<%= @user %>")
	<% end %>
	$("#user-modal").modal("hide")
<% end %>
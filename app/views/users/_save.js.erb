$("ul.errors").html("")
<% if @user.errors.any? %>
	<% @user.errors.full_messages.each do |message| %>
		$("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
	<% end %>
<% else %>
	<% if action?('create')%>
		$('#person_user_id').append($("<option />").html("<%= @user.name %>").attr("value", <%= @person.id %>))
		$('#member_mum_id').append($("<option />").html("<%= @person.name %>").attr("value", <%= @person.id %>))
		$('#member_dad_id').append($("<option />").html("<%= @person.name %>").attr("value", <%= @person.id %>))
		$('#member_' + focused + '_id option:last-child').attr("selected",true)
		selectChanged(focused)
	<% end %>
	$("#user-modal").remove()
<% end %>
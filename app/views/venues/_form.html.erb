<%= simple_form_for(@venue) do |f| %>

<div class="row" >
	<div class="col-md-6">
		<div class="form-group">
			<%= f.input :name, input_html: { class: 'form-control' } %>
		</div>
	</div>
</div>
<div class="row" >
	<div class="col-md-6">
		<div class="form-group">
			<%= f.input :street, input_html: { class: 'form-control' } %>
		</div>
	</div>
</div>
<div class="row" >
	<div class="col-md-2">
		<div class="form-group">
			<%= f.input :zip, as: :string, input_html: { class: 'form-control', :value => ("%05d" % f.object.zip if f.object.zip != nil) } %>
		</div>
	</div>
	<div class="col-md-4">
		<div class="form-group">
			<%= f.input :city, input_html: { class: 'form-control' } %>
		</div>
	</div>
</div>

<%= f.submit :class => 'btn btn-success' %>

<% end %>
